<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BaseDatos" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/verdeoscuro</item>
        <item name="colorPrimaryVariant">@color/verdeoscuro</item>
        <item name="colorOnPrimary">@color/verdemedio</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/naranja</item>
        <item name="colorSecondaryVariant">@color/naranja</item>
        <item name="colorOnSecondary">@color/naranja</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="1">?attr/colorPrimaryVariant</item>
        <!-- Customize your light theme here. -->
    </style>

    <style name="BottomNavigation">
        <item name="android:background">@color/verdeoscuro</item>
        <item name="itemIconTint">@color/verdemedio</item>
        <item name="itemTextColor">@color/verdemedio</item>
    </style>


</resources>