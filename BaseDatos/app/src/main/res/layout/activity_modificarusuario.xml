<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#EC9F64"
        android:orientation="vertical">

        <TextView
            android:id="@+id/modificarusuario"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="MODIFICAR USUARIO"
            android:gravity="center"
            android:textSize="35dp" />
    </LinearLayout>
    <ScrollView
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="5dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Datosmodificarusuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Introduzca los datos"
                android:gravity="center"
                android:textSize="35dp" />

            <EditText
                android:id="@+id/IDmodificarusuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text"
                android:hint="ID del usuario a modificar"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/Nombremodificarusuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text"
                android:hint="Nuevo nombre"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/Apellidosmodificarusuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text"
                android:hint="Nuevos apellidos"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/Direccionmodificarusuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text"
                android:hint="Nueva dirección"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/Telefonomodificarusuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:hint="Nuevo teléfono"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/Correomodificarusuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text"
                android:hint="Nuevo correo electrónico"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/Contraseniamodificarusuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPassword"
                android:hint="Nueva contraseña"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/NIFmodificarusuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text"
                android:hint="Nuevo NIF"
                android:textSize="20dp" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="vertical">

        <Button
            android:layout_weight="1"
            android:layout_marginHorizontal="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Modificar"
            android:textSize="30dp"
            android:id="@+id/Modificar" />

        <Button
            android:layout_weight="1"
            android:layout_marginHorizontal="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Volver"
            android:textSize="30dp"
            android:id="@+id/Volver" />
    </LinearLayout>
</LinearLayout>
