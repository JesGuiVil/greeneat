<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="5dp"
    android:layout_margin="5dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        app:cardBackgroundColor="@color/verdemedio"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true"
        android:layout_gravity="center"
        android:padding="15dp"
        android:foreground="?android:attr/selectableItemBackground">

        <!-- Contenido de la tarjeta -->
        <TextView
            android:id="@+id/idPedidoTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/verdeoscuro"
            android:layout_gravity="start"
            android:textSize="25dp"
            android:paddingStart="10dp"
            android:text="ID del Pedido" />

        <TextView
            android:id="@+id/fechaPedidoTextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/verdeoscuro"
            android:layout_gravity="center"
            android:textSize="25dp"
            android:text="Fecha del Pedido" />

        <TextView
            android:id="@+id/costeTotalTextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/verdeoscuro"
            android:textSize="25dp"
            android:layout_gravity="end"
            android:paddingEnd="10dp"
            android:text="Coste Total" />

    </androidx.cardview.widget.CardView>

</LinearLayout>
