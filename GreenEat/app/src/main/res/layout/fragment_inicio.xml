<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".InicioFragment"
    android:background="@color/verde">

    <ViewFlipper
        android:id="@+id/flipper"
        android:layout_width="match_parent"
        android:layout_height="370dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/huerto"></ImageView>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/vacas"></ImageView>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/envases"></ImageView>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/comrpometido"></ImageView>
    </ViewFlipper>

    <TextView
        android:id="@+id/textooferta"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PRODUCTOS EN OFERTA:"
        android:textStyle="bold"
        android:textColor="@color/verdeoscuro"
        android:textSize="25sp"
        android:layout_below="@+id/flipper">

    </TextView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerOfertas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/textooferta">

    </androidx.recyclerview.widget.RecyclerView>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="40dp"
        android:id="@+id/vercats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/hoja3"
        android:text="VER CATEGORIAS"
        android:textColor="@color/naranjabarra"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom|center_horizontal" />

</RelativeLayout>
