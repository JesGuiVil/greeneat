<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/verde"
    tools:context=".CategoriasFragment">

    <view class="android.widget.TextView"
        android:id="@+id/categorias"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/categorias"/>

    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:alpha="0.5"
        android:src="@drawable/logo" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/textocategorias"
        android:rowCount="3"
        android:columnCount="2"
        android:layout_marginHorizontal="20dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/frutasCard"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="12dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_margin="12dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="90dp"
                    android:src="@drawable/hortalizas"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:text="Frutas y hortalizas"
                    android:textColor="@color/verdeoscuro"
                    android:textSize="25sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cerealesCard"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="12dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_margin="12dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="90dp"
                    android:src="@drawable/cereales"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="centerCrop"/>
                <TextView
                    android:gravity="center"
                    android:layout_width="130dp"
                    android:layout_height="60dp"
                    android:text="Cereales"
                    android:inputType="textMultiLine"
                    android:layout_gravity="center_horizontal"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="@color/verdeoscuro"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/lacteosCard"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="12dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_margin="12dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="90dp"
                    android:src="@drawable/lacteos"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="centerCrop"/>
                <TextView
                    android:gravity="center"
                    android:layout_width="130dp"
                    android:layout_height="60dp"
                    android:text="Lácteos"
                    android:inputType="textMultiLine"
                    android:layout_gravity="center_horizontal"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="@color/verdeoscuro"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/carneCard"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="12dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_margin="12dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="90dp"
                    android:src="@drawable/carne"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="centerCrop"/>
                <TextView
                    android:gravity="center"
                    android:layout_width="130dp"
                    android:layout_height="60dp"
                    android:text="Carne y pescado"
                    android:inputType="textMultiLine"
                    android:layout_gravity="center_horizontal"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="@color/verdeoscuro"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/bebidasCard"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="12dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_margin="12dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="90dp"
                    android:src="@drawable/bebidas"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="centerCrop"/>
                <TextView
                    android:gravity="center"
                    android:layout_width="130dp"
                    android:layout_height="60dp"
                    android:text="Bebidas"
                    android:inputType="textMultiLine"
                    android:layout_gravity="center_horizontal"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="@color/verdeoscuro"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/verTodoCard"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="12dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_margin="12dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="90dp"
                    android:src="@drawable/logofondo"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:gravity="center"
                    android:layout_width="130dp"
                    android:layout_height="60dp"
                    android:text="Ver todo"
                    android:inputType="textMultiLine"
                    android:layout_gravity="center_horizontal"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="@color/verdeoscuro"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </GridLayout>
    <TextView
        android:id="@+id/textocategorias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CATEGORÍAS"
        android:textColor="@color/naranjabarra"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"/>

</RelativeLayout>